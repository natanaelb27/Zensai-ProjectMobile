<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#000000"
    tools:context=".MainMenuCashier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnrefresh_cashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/paprika"
            android:text="Refresh"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnlogoutcashier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/paprika"
            android:text="Logout"
            android:textAllCaps="false" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/paprika"
                    android:text="Cash, Debit, Credit"
                    android:textColor="#FFFFFF" />

                <ListView
                    android:id="@+id/listviewcashier_cashdebitkredit"
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:background="@drawable/border_list"
                    android:nestedScrollingEnabled="true">

                </ListView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/paprika"
                    android:text="Transfer"
                    android:textColor="#FFFFFF" />

                <ListView
                    android:id="@+id/listviewcashier_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:background="@drawable/border_list"
                    android:nestedScrollingEnabled="true">

                </ListView>

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/paprika"
                    android:text="Konfirmasi Pengambilan Makanan"
                    android:textColor="#FFFFFF" />

                <ListView
                    android:id="@+id/listviewcashier_buktiambil"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:background="@drawable/border_list"
                    android:nestedScrollingEnabled="true" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>