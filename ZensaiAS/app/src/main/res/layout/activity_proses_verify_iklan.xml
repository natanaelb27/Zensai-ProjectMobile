<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProsesVerifyIklan"
    android:background="#000000"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paprika"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Verifikasi Iklan"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imgiklanadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textiklanadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Text Iklan"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/paprika"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnapproveiklanadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/paprika"
                android:textAllCaps="false"
                android:background="@drawable/roundedbutton"
                android:text="Approve" />

            <Button
                android:id="@+id/btnrefuseiklanadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/paprika"
                android:textAllCaps="false"
                android:background="@drawable/roundedbutton"
                android:text="Refuse" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>